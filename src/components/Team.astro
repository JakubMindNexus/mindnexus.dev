    <div class="grid md:grid-cols-2 gap-10 max-w-4xl mx-auto">
      {founders.map((founder) => (
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-shadow duration-300 border border-purple-100/20">
          <div class="bg-white p-4">
            <img
              src={founder.image}
              alt={founder.name}
              class="w-full h-auto object-contain rounded-lg"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-1">{founder.name}</h3>
            <p class="text-purple-600 font-medium mb-3">{founder.role}</p>
            <p class="text-gray-600 mb-4">{founder.bio}</p>
            <a
              href={founder.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-purple-600 hover:text-purple-700 transition-colors"
            >
