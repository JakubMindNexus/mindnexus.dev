---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated gradient background -->
  <div class="absolute inset-0">
    <!-- Primary gradient orbs -->
    <div class="absolute top-1/4 -left-32 w-[600px] h-[600px] bg-brand-700/20 rounded-full blur-[120px] animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 -right-32 w-[500px] h-[500px] bg-brand-500/15 rounded-full blur-[100px] animate-pulse-slow" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-brand-900/10 rounded-full blur-[150px]"></div>

    <!-- Geometric accent shapes -->
    <div class="absolute top-20 right-[15%] w-px h-32 bg-gradient-to-b from-transparent via-brand-500/30 to-transparent"></div>
    <div class="absolute bottom-32 left-[20%] w-px h-24 bg-gradient-to-b from-transparent via-brand-400/20 to-transparent"></div>
    <div class="absolute top-1/3 right-[10%] w-24 h-px bg-gradient-to-r from-transparent via-brand-500/20 to-transparent"></div>

    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(to right, #fff 1px, transparent 1px), linear-gradient(to bottom, #fff 1px, transparent 1px); background-size: 80px 80px;"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 pt-32 pb-24">
    <div class="grid lg:grid-cols-12 gap-12 items-center">
      <!-- Main content -->
      <div class="lg:col-span-7 text-center lg:text-left">
        <!-- Eyebrow -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-surface-elevated border border-white/5 mb-8 animate-fade-in">
          <span class="w-2 h-2 rounded-full bg-brand-500 animate-pulse"></span>
          <span class="text-sm text-text-secondary">AI-Powered Solutions from Hamburg</span>
        </div>

        <!-- Main headline -->
        <h1 class="font-display text-5xl sm:text-6xl lg:text-7xl xl:text-8xl text-text-primary leading-[0.95] tracking-tight mb-8 animate-fade-in-up animate-delay-100">
          We Build
          <span class="block gradient-text">Intelligent</span>
          <span class="block">Products</span>
        </h1>

        <!-- Subheadline -->
        <p class="text-lg sm:text-xl text-text-secondary max-w-xl mx-auto lg:mx-0 mb-10 leading-relaxed animate-fade-in-up animate-delay-200">
          Mind Nexus GmbH crafts AI-powered platforms that transform how businesses operate.
          Our flagship product, <a href="https://postline.ai" target="_blank" rel="noopener noreferrer" class="text-brand-400 hover:text-brand-300 underline underline-offset-4 decoration-brand-400/30 hover:decoration-brand-300">Postline.ai</a>,
          is revolutionizing LinkedIn content management for agencies worldwide.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up animate-delay-300">
          <a
            href="https://postline.ai"
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center justify-center gap-2 px-8 py-4 bg-brand-600 hover:bg-brand-500 text-white font-semibold rounded-full transition-all hover:shadow-xl hover:shadow-brand-500/25 hover:-translate-y-0.5"
          >
            Discover Postline.ai
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
          <a
            href="#about"
            class="group inline-flex items-center justify-center gap-2 px-8 py-4 border border-white/10 hover:border-white/20 text-text-primary font-semibold rounded-full transition-all hover:bg-white/5"
          >
            Learn More
            <svg class="w-5 h-5 transition-transform group-hover:translate-y-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 5v14M5 12l7 7 7-7"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Visual element -->
      <div class="lg:col-span-5 relative animate-fade-in animate-delay-400">
        <div class="relative aspect-square max-w-md mx-auto">
          <!-- Glowing ring -->
          <div class="absolute inset-0 rounded-full border border-brand-500/20"></div>
          <div class="absolute inset-4 rounded-full border border-brand-500/10"></div>
          <div class="absolute inset-8 rounded-full border border-brand-500/5"></div>

          <!-- Central logo -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="relative">
              <div class="absolute inset-0 bg-brand-500/20 blur-3xl rounded-full scale-150"></div>
              <img
                src="/mn-logo.png"
                alt="Mind Nexus"
                class="relative w-32 h-32 sm:w-40 sm:h-40 lg:w-48 lg:h-48 object-contain animate-float"
              />
            </div>
          </div>

          <!-- Orbiting elements -->
          <div class="absolute inset-0 animate-[spin_30s_linear_infinite]">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-3 h-3 bg-brand-400 rounded-full"></div>
          </div>
          <div class="absolute inset-0 animate-[spin_25s_linear_infinite_reverse]">
            <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-2 h-2 bg-brand-600 rounded-full"></div>
          </div>
          <div class="absolute inset-0 animate-[spin_35s_linear_infinite]">
            <div class="absolute top-1/2 right-0 translate-x-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-brand-500 rounded-full"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom stats bar -->
    <div class="mt-20 pt-12 border-t border-white/5 animate-fade-in-up animate-delay-500">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
        <div class="text-center lg:text-left">
          <div class="font-display text-3xl lg:text-4xl text-text-primary mb-1">2023</div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Founded</div>
        </div>
        <div class="text-center lg:text-left">
          <div class="font-display text-3xl lg:text-4xl text-text-primary mb-1">Hamburg</div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Germany</div>
        </div>
        <div class="text-center lg:text-left">
          <div class="font-display text-3xl lg:text-4xl text-brand-400 mb-1">10x</div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Efficiency</div>
        </div>
        <div class="text-center lg:text-left">
          <div class="font-display text-3xl lg:text-4xl text-brand-400 mb-1">AI-First</div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Approach</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 rounded-full border-2 border-white/20 flex items-start justify-center p-2">
      <div class="w-1 h-2 bg-white/40 rounded-full animate-pulse"></div>
    </div>
  </div>
</section>
