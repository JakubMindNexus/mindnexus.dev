<section id="contact" class="relative py-32 lg:py-40 overflow-hidden bg-surface-elevated">
  <!-- Background elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-brand-700/10 rounded-full blur-[150px]"></div>

    <!-- Decorative lines -->
    <div class="absolute top-1/4 left-[10%] w-px h-40 bg-gradient-to-b from-transparent via-brand-500/20 to-transparent"></div>
    <div class="absolute bottom-1/4 right-[10%] w-px h-40 bg-gradient-to-b from-transparent via-brand-500/20 to-transparent"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Section header -->
      <span class="inline-block text-brand-400 text-sm font-semibold tracking-widest uppercase mb-4">Get in Touch</span>
      <h2 class="font-display text-4xl sm:text-5xl lg:text-6xl text-text-primary leading-tight mb-6">
        Let's build something
        <span class="gradient-text">extraordinary</span>
      </h2>
      <p class="text-xl text-text-secondary leading-relaxed mb-16 max-w-2xl mx-auto">
        Ready to transform your LinkedIn strategy? We'd love to hear from you.
        Connect with us and let's discuss how we can help.
      </p>

      <!-- Contact cards -->
      <div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto mb-16">
        <!-- Email card -->
        <a
          href="mailto:hello@mindnexus.dev"
          class="group relative p-8 rounded-2xl bg-surface border border-white/5 hover:border-brand-500/30 transition-all duration-300 hover:-translate-y-1"
        >
          <div class="absolute inset-0 bg-gradient-to-br from-brand-600/0 to-brand-900/0 group-hover:from-brand-600/5 group-hover:to-brand-900/5 rounded-2xl transition-all duration-300"></div>

          <div class="relative">
            <div class="w-14 h-14 rounded-2xl bg-brand-600/10 flex items-center justify-center mb-6 group-hover:bg-brand-600/20 transition-colors mx-auto">
              <svg class="w-6 h-6 text-brand-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <p class="text-sm text-text-muted uppercase tracking-wider mb-2">Email us</p>
            <p class="font-display text-xl text-text-primary group-hover:text-brand-400 transition-colors">hello@mindnexus.dev</p>
          </div>
        </a>

        <!-- LinkedIn card -->
        <a
          href="https://www.linkedin.com/company/mindnexus"
          target="_blank"
          rel="noopener noreferrer"
          class="group relative p-8 rounded-2xl bg-surface border border-white/5 hover:border-brand-500/30 transition-all duration-300 hover:-translate-y-1"
        >
          <div class="absolute inset-0 bg-gradient-to-br from-brand-600/0 to-brand-900/0 group-hover:from-brand-600/5 group-hover:to-brand-900/5 rounded-2xl transition-all duration-300"></div>

          <div class="relative">
            <div class="w-14 h-14 rounded-2xl bg-brand-600/10 flex items-center justify-center mb-6 group-hover:bg-brand-600/20 transition-colors mx-auto">
              <svg class="w-6 h-6 text-brand-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </div>
            <p class="text-sm text-text-muted uppercase tracking-wider mb-2">Connect on</p>
            <p class="font-display text-xl text-text-primary group-hover:text-brand-400 transition-colors">LinkedIn</p>
          </div>
        </a>
      </div>

      <!-- Location badge -->
      <div class="inline-flex items-center gap-3 px-6 py-3 rounded-full bg-surface border border-white/5">
        <svg class="w-5 h-5 text-brand-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          <circle cx="12" cy="10" r="3"></circle>
        </svg>
        <span class="text-text-secondary">Based in <span class="text-text-primary font-medium">Hamburg, Germany</span></span>
      </div>
    </div>
  </div>
</section>
