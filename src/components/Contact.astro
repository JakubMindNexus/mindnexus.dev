<section id="contact" class="py-24 md:py-32 bg-gradient-to-br from-purple-50/30 via-white to-gray-50">
  <div class="max-w-4xl mx-auto px-6">
    <div class="text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">Get in Touch</h2>
      <p class="text-xl text-gray-600 mb-12">Let's connect and discuss how we can help transform your LinkedIn strategy</p>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <!-- Email card -->
        <a
          href="mailto:hello@mindnexus.dev"
          class="group flex items-center gap-4 bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 px-8 py-6 border border-purple-100/20"
        >
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center group-hover:bg-purple-200 transition-colors">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-purple-600">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <div class="text-left">
            <p class="text-sm text-gray-500">Email us</p>
            <p class="text-lg font-semibold text-purple-600 group-hover:text-purple-700">hello@mindnexus.dev</p>
          </div>
        </a>

        <!-- LinkedIn card -->
        <a
          href="https://www.linkedin.com/company/mindnexus"
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-4 bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 px-8 py-6 border border-purple-100/20"
        >
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center group-hover:bg-purple-200 transition-colors">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-purple-600">
